{
  "openapi": "3.0.0",
  "paths": {
    "/": {
      "get": {
        "operationId": "AppController_getData",
        "parameters": [],
        "responses": { "200": { "description": "" } }
      }
    },
    "/appointments": {
      "get": {
        "operationId": "AppointmentsController_getAllAppointments",
        "parameters": [
          {
            "name": "status",
            "required": false,
            "in": "query",
            "schema": { "type": "string" }
          },
          {
            "name": "search",
            "required": false,
            "in": "query",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "201": {
            "description": "Creates new user object.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/CurrentAppointment" }
                }
              }
            }
          },
          "403": { "description": "Forbiden" }
        },
        "tags": ["Appointments"]
      },
      "post": {
        "operationId": "AppointmentsController_postAppointment",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/NewAppointent" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "The resource has been  successfully created"
          },
          "403": { "description": "Forbiden" }
        },
        "tags": ["Appointments"]
      }
    },
    "/appointments/{id}": {
      "get": {
        "operationId": "AppointmentsController_getAppointmentsByPOS",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "The results element has been correct" },
          "403": { "description": "Forbiden" }
        },
        "tags": ["Appointments"]
      },
      "patch": {
        "operationId": "AppointmentsController_putAppointment",
        "parameters": [
          {
            "name": "id",
            "required": true,
            "in": "path",
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CurrentAppointment" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "The resource has been  successfully updated"
          },
          "403": { "description": "Forbiden" }
        },
        "tags": ["Appointments"]
      }
    },
    "/Auth/signup": {
      "post": {
        "operationId": "AuthController_signUp",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/NewUser" }
            }
          }
        },
        "responses": { "201": { "description": "" } },
        "tags": ["Auth"]
      }
    },
    "/Auth/signin": {
      "post": {
        "operationId": "AuthController_signIn",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AuthUser" }
            }
          }
        },
        "responses": { "201": { "description": "" } },
        "tags": ["Auth"]
      }
    }
  },
  "info": {
    "title": "APPOINTMENT API",
    "description": "The appointment API description",
    "version": "1.0",
    "contact": {}
  },
  "tags": [{ "name": "develop", "description": "" }],
  "servers": [],
  "components": {
    "schemas": {
      "CurrentAppointment": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" },
          "status": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "PENDING",
                "CANCELED",
                "PRESENT",
                "ABSENT",
                "CALLING",
                "ATENDENDED"
              ]
            }
          }
        },
        "required": ["id", "status"]
      },
      "NewAppointent": {
        "type": "object",
        "properties": {
          "description": { "type": "string" },
          "status": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "PENDING",
                "CANCELED",
                "PRESENT",
                "ABSENT",
                "CALLING",
                "ATENDENDED"
              ]
            }
          }
        },
        "required": ["status"]
      },
      "NewUser": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" },
          "email": { "type": "string" },
          "role": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["ADMIN", "OPERATOR", "USER", "DISABLED"]
            }
          }
        },
        "required": ["username", "password", "email", "role"]
      },
      "AuthUser": {
        "type": "object",
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" },
          "email": { "type": "string" }
        },
        "required": ["username", "password"]
      }
    }
  }
}
